            <field name="name">Send Approval Request</field>
            <field name="email_from">${object.user_id.login or ''}</field>
            <field name="subject">Request for Executive Approval ${object.name}</field>
            <field name="email_to">${object.section_id.user_id.login or ''}</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${object.lang}</field>
            <field name="body_html"><![CDATA[


            Thank you!
            ]]></field>
        </record>

        <record id="email_template_manager_approval" model="email.template">
            <field name="name">Send Approval Request</field>
            <field name="email_from">${object.user_id.login or ''}</field>
            <field name="subject">Request for Manager Approval ${object.name}</field>
            <field name="email_to">${object.section_id.parent_id.user_id.login or ''}</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${object.lang}</field>
            <field name="body_html"><![CDATA[



            Thank you!
            ]]></field>
        </record>

  </data>
</openerp>