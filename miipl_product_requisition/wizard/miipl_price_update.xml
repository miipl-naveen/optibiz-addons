<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<!-- wizard action on Product Price Update-->
		<!--<act_window id="miipl_product_price_update" name="Update Product Cost Price"
			src_model="miipl.product.requisition" res_model="miipl.price.update" view_type="form"
			view_mode="form"  target="new"
			/>-->


		<record id="miipl_product_price_update_wizard_view" model="ir.ui.view">
			<field name="name">Product Price Details</field>
			<field name="model">miipl.price.update</field>
			<field name="arch" type="xml">
				<form string="Product Details" version="7.0">
					<sheet>
						<group>
							<group>
								<field name="request_id" readonly="1"/>
							</group>
							<group>
								<field name="product_id" />
							</group>
						</group>
					<notebook>
						<page string="Purchase Price History">
							<field name="product_purchase_history">
							<tree string="Purchase History" editable="bottom" context="{'group_by': 'partner_id'}">
								<field name="partner_id"/>
								<field name="purchase_order_id"/>
								<field name="product_id" invisible="1"/>
								<field name="price_unit"/>
								<field name="po_date"/>
							</tree>
							</field>
						</page>
						<page string="Current Suppliers">
							<field name="product_supplier_line">
							<tree string="Last Purchased Supplier List" default_order="po_date desc" editable="bottom" >
								<field name="partner_id"/>
								<field name="purchase_order_id"/>
								<field name="product_id" invisible="1"/>
								<field name="price_unit"/>
								<field name="po_date"/>
							</tree>
							</field>
						</page>
					</notebook>
					<notebook>
						<page string="Supplier List">
							<field name="supplier_line">
								<tree string="Suppliers" editable="bottom">
									<field name="name"/>
									<field name="supplier_cost"/>
								</tree>
							</field>
						</page>
					</notebook>



					<footer>
						<button string="Update" type="object" name="post_comments" class="oe_highlight" />
						or
						<button string="Cancel" class="oe_link" special="cancel" />
					</footer>
					</sheet>
				</form>
			</field>
		</record>

		<record id="miipl_product_price_update" model="ir.actions.act_window">
            <field name="name">Update Product Cost Price</field>
            <field name="type">ir.actions.act_window</field>
			<field name="key2">tree_but_open</field>
            <field name="res_model">miipl.price.update</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>



		<!-- To update Sale Price-->
		<!--<act_window id="miipl_product_sale_price_update" name="Update Product Sale Price"
			src_model="miipl.product.requisition" res_model="miipl.sale.price.update" view_type="form"
			view_mode="form"  target="new"
			/>-->



		<record id="miipl_product_sale_price_update_wizard_view" model="ir.ui.view">
			<field name="name">Product Sale Price Details</field>
			<field name="model">miipl.sale.price.update</field>
			<field name="arch" type="xml">
				<form string="Product Details" version="7.0">
					<sheet>
						<group>
							<group>
								<field name="request_id" readonly="1"/>
							</group>
							<group>
								<field name="product_id" />
							</group>
						</group>
					<group>
						<group>
							<field name="cost" string="Cost Price"/>
							<field name="sale" string="Selling Price"/>
							<field name="price_expiry"/>
						</group>

						<group>
							<field name="coordinator_selling_price" />
							<field name="selling_price" />
							<field name="min_selling_price" />
						</group>
					</group>


					<footer>
						<button string="Update" type="object" name="post_comments" class="oe_highlight" />
						or
						<button string="Cancel" class="oe_link" special="cancel" />
					</footer>
					</sheet>
				</form>
			</field>
		</record>

		<record id="miipl_product_sale_price_update" model="ir.actions.act_window">
            <field name="name">Update Product Sale Price</field>
            <field name="type">ir.actions.act_window</field>
			<field name="key2">tree_but_open</field>
            <field name="res_model">miipl.sale.price.update</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


	</data>
</openerp>